<resources>
    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_marginTop">@dimen/card_margin</item>
        <item name="android:layout_marginStart">@dimen/card_margin</item>
        <item name="android:layout_marginEnd">@dimen/card_margin</item>
        <item name="android:layout_marginBottom">@dimen/card_semi_margin</item>
        <item name="cardCornerRadius">15dp</item>
    </style>

    <style name="CardImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="CardBigText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/card_margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardLayout">
        <item name="android:padding">@dimen/card_margin</item>
    </style>

    <style name="CardText">
        <item name="android:textStyle">bold</item>
    </style>
</resources>